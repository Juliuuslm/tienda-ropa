---
interface Testimonial {
  name: string;
  role: string;
  content: string;
  rating: number;
  image?: string;
}

const testimonials: Testimonial[] = [
  {
    name: 'María García',
    role: 'Cliente Verificada',
    content:
      'Excelente calidad en los productos y envío muy rápido. La ropa se ve mejor en persona que en las fotos. Totalmente recomendado.',
    rating: 5,
  },
  {
    name: 'Laura Rodríguez',
    role: 'Cliente Verificada',
    content:
      'Me encanta comprar aquí. Las prendas son cómodas y duran mucho. El servicio al cliente es impecable.',
    rating: 5,
  },
  {
    name: 'Ana Martínez',
    role: 'Cliente Verificada',
    content:
      'Muy buena opción para ropa casual y de trabajo. Los precios son justos y siempre hay buenos descuentos.',
    rating: 4,
  },
];
---

<section class="py-16 bg-neutral-50">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-2">Lo que nuestros clientes dicen</h2>
      <p class="text-neutral-600">Opiniones de clientes verificados que confían en nosotros</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        testimonials.map((testimonial) => (
          <div class="bg-white rounded-lg shadow-sm p-6">
            {/* Stars */}
            <div class="flex gap-1 mb-4">
              {[...Array(5)].map((_, i) => (
                <span class={i < testimonial.rating ? 'text-yellow-400 text-lg' : 'text-neutral-300 text-lg'}>
                  ★
                </span>
              ))}
            </div>

            {/* Content */}
            <p class="text-neutral-700 mb-4 italic">"{testimonial.content}"</p>

            {/* Author */}
            <div>
              <p class="font-semibold text-neutral-900">{testimonial.name}</p>
              <p class="text-sm text-neutral-600">{testimonial.role}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
