---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { CartPage } from '@/components/cart/CartPage';
---

<BaseLayout
  title="Carrito de Compras"
  description="Ver y gestionar tu carrito de compras"
>
  <!-- Breadcrumb -->
  <nav class="bg-neutral-50 py-4">
    <div class="container flex gap-2 text-xs sm:text-sm">
      <a href="/" class="text-primary-600 hover:underline">Home</a>
      <span>/</span>
      <span class="text-neutral-600">Carrito</span>
    </div>
  </nav>

  <!-- Cart Section -->
  <section class="py-12">
    <div class="container">
      <CartPage client:load />
    </div>
  </section>
</BaseLayout>
