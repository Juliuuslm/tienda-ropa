---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { ShopPage } from '@/components/shop/ShopPage';
import products from '@/data/products.json';
---

<BaseLayout
  title="Shop"
  description="Explora nuestra colección de ropa de moda para todos"
>
  <!-- Page Header -->
  <section class="bg-neutral-100 py-12">
    <div class="container">
      <h1 class="text-3xl md:text-4xl font-bold mb-2">Nuestra Tienda</h1>
      <p class="text-neutral-600">Explora nuestra colección completa de prendas</p>
    </div>
  </section>

  <!-- Shop Section -->
  <section class="py-16">
    <div class="container">
      <ShopPage client:load products={products} itemsPerPage={12} />
    </div>
  </section>
</BaseLayout>
