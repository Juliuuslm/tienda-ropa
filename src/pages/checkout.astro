---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { ProgressSteps } from '@/components/checkout/ProgressSteps';
import { CheckoutForm } from '@/components/checkout/CheckoutForm';
import { PaymentMethods } from '@/components/checkout/PaymentMethods';
import { OrderSummary } from '@/components/checkout/OrderSummary';
---

<BaseLayout
  title="Checkout"
  description="Completa tu compra"
>
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-neutral-900 to-neutral-800 py-12">
    <div class="container">
      <h1 class="text-4xl md:text-5xl font-bold text-white">Finalizar Compra</h1>
      <p class="text-neutral-300 mt-2">Completa tu pedido en 3 sencillos pasos</p>
    </div>
  </section>

  <!-- Checkout Content -->
  <section class="py-16 bg-neutral-50 min-h-screen">
    <div class="container">
      <!-- Progress Steps -->
      <ProgressSteps
        client:load
        currentStep="billing"
        completedSteps={[]}
      />

      <!-- Main Checkout Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column: Forms -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Billing Form -->
          <CheckoutForm
            client:load
            step="billing"
          />

          <!-- Payment Methods -->
          <div data-aos="fade-up">
            <PaymentMethods
              client:load
              selectedMethod="card"
            />
          </div>
        </div>

        <!-- Right Column: Order Summary -->
        <div>
          <OrderSummary
            client:load
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
