---
import BaseLayout from '@/layouts/BaseLayout.astro';
import FeaturedDeals from '@/components/products/FeaturedDeals.astro';
import { Newsletter } from '@/components/common/Newsletter';
import { HeroSlider } from '@/components/home/HeroSlider';
import { CategoriesShowcase } from '@/components/home/CategoriesShowcase';
import { Features } from '@/components/home/Features';
import { TestimonialsCarousel } from '@/components/home/TestimonialsCarousel';
---

<BaseLayout
  title="Inicio"
  description="Bienvenido a nuestra tienda de ropa con las mejores prendas"
>
  <!-- Hero Slider Section -->
  <HeroSlider client:load />

  <!-- Features Section -->
  <Features client:load />

  <!-- Categories Showcase -->
  <CategoriesShowcase client:load />

  <!-- Featured Deals -->
  <FeaturedDeals />

  <!-- Testimonials Carousel -->
  <TestimonialsCarousel client:load />

  <!-- Newsletter -->
  <Newsletter client:idle />
</BaseLayout>
