---
import BaseLayout from '@/layouts/BaseLayout.astro';
import FeaturedDeals from '@/components/products/FeaturedDeals.astro';
import Testimonials from '@/components/common/Testimonials.astro';
import { Newsletter } from '@/components/common/Newsletter';
import { HeroSlider } from '@/components/home/HeroSlider';
---

<BaseLayout
  title="Inicio"
  description="Bienvenido a nuestra tienda de ropa con las mejores prendas"
>
  <!-- Hero Slider Section -->
  <HeroSlider client:load />

  <!-- Featured Deals -->
  <FeaturedDeals />

  <!-- Testimonials -->
  <Testimonials />

  <!-- Newsletter -->
  <Newsletter client:idle />
</BaseLayout>
