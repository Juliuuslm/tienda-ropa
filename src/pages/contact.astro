---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/common/Button.astro';
---

<BaseLayout
  title="Contacto"
  description="Ponte en contacto con nosotros"
>
  <!-- Page Header -->
  <section class="bg-neutral-100 py-12">
    <div class="container">
      <h1 class="text-3xl md:text-4xl font-bold">Contacto</h1>
      <p class="text-neutral-600">Nos encantar√≠a saber de ti</p>
    </div>
  </section>

  <!-- Content -->
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 mb-12">
        <!-- Contact Info -->
        {
          [
            {
              icon: 'üìç',
              title: 'Direcci√≥n',
              content: 'Calle Principal 123, Madrid, Espa√±a',
            },
            {
              icon: 'üìß',
              title: 'Email',
              content: 'info@tiendaderopa.com',
            },
            {
              icon: 'üì±',
              title: 'Tel√©fono',
              content: '+34 123 456 789',
            },
          ].map((item) => (
            <div class="text-center">
              <div class="text-4xl mb-4">{item.icon}</div>
              <h3 class="text-xl font-bold mb-2">{item.title}</h3>
              <p class="text-neutral-600">{item.content}</p>
            </div>
          ))
        }
      </div>

      <!-- Contact Form -->
      <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-sm p-8">
