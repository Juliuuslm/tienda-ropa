        <form class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block font-semibold mb-2">Nombre</label>
              <input
                type="text"
                class="w-full border border-neutral-300 rounded px-4 py-2"
                placeholder="Tu nombre"
              />
            </div>
            <div>
              <label class="block font-semibold mb-2">Email</label>
              <input
                type="email"
                class="w-full border border-neutral-300 rounded px-4 py-2"
                placeholder="tu@email.com"
              />
            </div>
          </div>

          <div>
            <label class="block font-semibold mb-2">Asunto</label>
            <input
              type="text"
              class="w-full border border-neutral-300 rounded px-4 py-2"
              placeholder="Asunto del mensaje"
            />
          </div>

          <div>
            <label class="block font-semibold mb-2">Mensaje</label>
            <textarea
              rows={6}
              class="w-full border border-neutral-300 rounded px-4 py-2"
              placeholder="Tu mensaje aqu√≠..."
            ></textarea>
          </div>

          <Button variant="primary" class="w-full text-center">
