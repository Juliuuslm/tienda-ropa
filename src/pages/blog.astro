---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Image from '@/components/common/Image.astro';
import Button from '@/components/common/Button.astro';

const blogPosts = [
  {
    id: '1',
    slug: 'tendencias-moda-2024',
    title: 'Tendencias de Moda para 2024',
    excerpt: 'Descubre las tendencias más importantes que dominarán la moda este año',
    image: '/images/blog/blog-post/1.jpg',
    author: 'María García',
    date: '14 de Noviembre de 2024',
    category: 'Tendencias',
  },
  {
    id: '2',
    slug: 'como-cuidar-ropa',
    title: 'Cómo Cuidar tu Ropa',
    excerpt: 'Tips y consejos para mantener tus prendas como nuevas por más tiempo',
    image: '/images/blog/blog-post/2.jpg',
    author: 'Juan López',
    date: '12 de Noviembre de 2024',
    category: 'Cuidados',
  },
  {
    id: '3',
    slug: 'guia-compra-jeans',
    title: 'Guía Completa para Comprar Jeans',
    excerpt: 'Todo lo que necesitas saber para encontrar el jeans perfecto',
    image: '/images/blog/blog-post/3.jpg',
    author: 'Laura Martínez',
    date: '10 de Noviembre de 2024',
    category: 'Guías',
  },
  {
    id: '4',
    slug: 'looks-para-oficina',
    title: '5 Looks Profesionales para la Oficina',
    excerpt: 'Ideas de outfits elegantes y cómodos para tu día laboral',
    image: '/images/blog/blog-post/4.jpg',
    author: 'Isabel Rodríguez',
    date: '8 de Noviembre de 2024',
    category: 'Estilos',
  },
];
---

<BaseLayout
  title="Blog"
  description="Consejos, tendencias y guías de moda"
>
  <!-- Page Header -->
  <section class="bg-neutral-100 py-12">
    <div class="container">
      <h1 class="text-3xl md:text-4xl font-bold">Blog de Moda</h1>
      <p class="text-neutral-600">Consejos, tendencias y guías de estilo</p>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-16">
    <div class="container">
      <!-- Featured Post -->
      <article class="bg-white rounded-lg shadow-sm overflow-hidden mb-12 lg:flex">
        <Image
          src={blogPosts[0].image}
          alt={blogPosts[0].title}
          class="w-full lg:w-1/2 h-96 object-cover"
        />
        <div class="p-8 lg:w-1/2 flex flex-col justify-center">
          <div class="flex gap-4 mb-4">
            <span class="text-sm bg-primary-100 text-primary-700 px-3 py-1 rounded-full">
              {blogPosts[0].category}
            </span>
            <span class="text-sm text-neutral-600">{blogPosts[0].date}</span>
          </div>
          <h2 class="text-2xl md:text-3xl font-bold mb-4">{blogPosts[0].title}</h2>
          <p class="text-neutral-700 mb-6">{blogPosts[0].excerpt}</p>
          <div class="flex items-center justify-between">
            <span class="text-sm text-neutral-600">Por {blogPosts[0].author}</span>
            <Button href={`/blog/${blogPosts[0].slug}`} variant="primary">
              Leer Más
            </Button>
          </div>
        </div>
      </article>

      <!-- Other Posts -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.slice(1).map((post) => (
          <article class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-lg transition-shadow">
            <Image
              src={post.image}
              alt={post.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <div class="flex gap-2 mb-3">
                <span class="text-xs bg-primary-100 text-primary-700 px-2 py-1 rounded">
                  {post.category}
                </span>
                <span class="text-xs text-neutral-600">{post.date}</span>
              </div>
              <h3 class="text-lg font-bold mb-3 line-clamp-2">{post.title}</h3>
              <p class="text-neutral-600 text-sm mb-4 line-clamp-2">{post.excerpt}</p>
              <div class="flex items-center justify-between text-sm">
                <span class="text-neutral-600">{post.author}</span>
                <Button href={`/blog/${post.slug}`} variant="outline">
                  Leer
                </Button>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Pagination -->
      <div class="mt-12 flex justify-center gap-2">
        <button class="px-4 py-2 border border-neutral-300 rounded hover:bg-neutral-100">
          ← Anterior
        </button>
        <button class="px-4 py-2 bg-primary-600 text-white rounded">1</button>
        <button class="px-4 py-2 border border-neutral-300 rounded hover:bg-neutral-100">
          2
        </button>
        <button class="px-4 py-2 border border-neutral-300 rounded hover:bg-neutral-100">
          Siguiente →
        </button>
      </div>
    </div>
  </section>
</BaseLayout>
